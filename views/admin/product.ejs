<div class="main-content">
  <div class="content-header">
      <div>
          <h1>Products</h1>
          <p>Manage all your products here</p>
      </div>
      <a href="/admin/addproduct" class="add-product-btn">+ Add product</a>
  </div>

  

  <div class="products-grid">
      <!-- Repeat this product card structure -->
      <div class="product-card">
          <div class="product-image">
              <img src="pear-image.jpg" alt="Product">
          </div>
          <div class="product-info">
              <h3 class="product-name">Product name</h3>
              <p class="product-price">$12</p>
              <div class="action-buttons">
                  <button class="edit-btn" onclick="editproduct(event)">Edit</button>
                  <button class="delete-btn">Delete</button>
              </div>
          </div>
      </div>
      <!-- Repeat product cards as needed -->
  </div>

  <div class="pagination">
      <a href="#" class="page-link active">1</a>
      <a href="#" class="page-link">2</a>
      <a href="#" class="page-link">3</a>
      <a href="#" class="page-link">></a>
  </div>
</div>
<script>
    function editproduct(event)
    {
        event.preventDefault();

        fetch('/admin/editproduct',{
            method:"GET"
        })
        .then((response)=>
        {
        if(response.ok)
        {
           window.location.href="/admin/editproduct";
        }else
        {
            alert("edit not possible");
        }
       })
       .catch(error=>{
         console.error("Error during edit",error)
       })
    }
</script>